#------------------------------------------------#
#       General configuration options
#------------------------------------------------#

mainmenu "Yunetas Kernel Configuration"

#------------------------------#
#   Compiler
#------------------------------#
choice
    prompt "Compiler Selection"
    default USE_COMPILER_CLANG

config USE_COMPILER_MUSL
    bool "Musl compiler"
    help
        Select Musl as the compiler.

config USE_COMPILER_CLANG
    bool "Clang compiler"
    help
        Select Clang as the compiler.

config USE_COMPILER_GCC
    bool "GCC compiler"
    help
        Select GCC as the compiler.

endchoice

#------------------------------#
#   Compiler Build
#------------------------------#
choice
    prompt "Compiler Build"
    default BUILD_PROD

config BUILD_PROD
    bool "Build production"
    help
        Select build production.

config BUILD_DEBUG
    bool "Build debug"
    help
        Select build debug.

endchoice

#------------------------------#
#   TLS libraries
#------------------------------#
menu "TLS Library Selection"

config YTLS_USE_MBEDTLS
    bool "Use Mbed-TLS library"
    default y
    help
        Add mbed-tls as a TLS library to the YTLS API.

config YTLS_USE_OPENSSL
    bool "Use OpenSSL library"
    help
        Add OpenSSL as a TLS library to the YTLS API.

endmenu

#------------------------------#
#   Debug
#------------------------------#
menu "Debug Options"

config DEBUG_WITH_BACKTRACE
    bool "Use backtrace library"
    default y
    help
        Use backtrace library to print stack trace

config DEBUG_PRINT_YEV_LOOP_TIMES
    bool "Print times of yev_loop"
    default n
    help
        Enable print of elapsed times of several points in yev_loop

config DEBUG_TRACK_MEMORY
    bool "Enable track memory"
    default n
    help
        Enable track memory to find leaks

endmenu

#------------------------------#
#   Modules
#------------------------------#
menu "Modules"
source "modules/c/Kconfig"
endmenu
